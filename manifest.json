{
    "manifest_version": 2,
    "name": "Youtube Ad Skipper",
    "description": "Automatically skips all skippable youtube ads the instant they appear",
    "version": "1",
    "permissions": [
        "tabs",
        "notifications" 
      ],
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*"],           
            "js": ["content.js"],
            "run_at": "document_end"
        }

    ],
    "icons": {
        "128": "128.png"
        },
	"background": {
		"scripts": ["background.js"]
	}
}